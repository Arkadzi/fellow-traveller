<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/trip_point_item_height"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <View
        android:id="@+id/from_point"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/point_marker_from" />

    <View
        android:id="@+id/to_point"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/point_marker_from" />

    <View
        android:id="@+id/way_point"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/point_marker_way" />

    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/ic_clear_white_24dp"
        android:tint="#a1a1a1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/from_point"
        android:layout_toLeftOf="@id/iv_clear"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_point_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/tv_point_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>